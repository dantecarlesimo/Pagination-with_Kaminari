<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Price</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <%= paginate @products %>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.item %></td>
        <td><%= product.price %></td>
        <td><%= product.category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
